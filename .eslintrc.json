{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "browser": false,
    "$": false,
    "$$": false
  },
  "rules": {
    "comma-dangle": ["warn", "always-multiline"],
    "no-extra-semi": "warn",
    "no-undef": "error",
    "no-unused-vars": ["error", {"vars": "all", "args": "after-used"}],
    "quotes": ["warn", "single"],
    "semi": "off",
    "space-before-blocks": ["warn", { "functions": "always", "keywords": "always", "classes": "always" }]
  }
}
